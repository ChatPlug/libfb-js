{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2017", "dom"],
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "declaration": true
    },
    "include": ["src/**/*"]
}
