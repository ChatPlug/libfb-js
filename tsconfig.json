{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["esnext", "dom"],
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "declaration": true
    },
    "include": ["src/**/*"]
}
